<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Crie sua conta ou Entrar</h1>
      <p class="text-center lead">Faca seu login ou cadastre-se</p>

      <%- include('includes/messages') %>

      <div class="row">
        <div class="col-lg">
            <h4>Faca seu cadastro</h4>
            <p>Se voce nao possui conta, cadastre-se</p>
            <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                <div class="mb-3">
                  <label class="form-label">Seu Email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                    <label class="form-label">Sua senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>
                <button type="submit" class="btn btn-primary">Criar</button>
              </form>
        </div>

        <div class="col-lg">
            <h4>Logar-se</h4>
            <p>Ou faca login para entrar no sistema</p>
            <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                <div class="mb-3">
                  <label class="form-label">Seu Email</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                    <label class="form-label">Sua senha</label>
                    <input type="password" class="form-control" name="password">
                  </div>
                <button type="submit" class="btn btn-primary">Logar-se</button>
              </form>
        </div>
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>